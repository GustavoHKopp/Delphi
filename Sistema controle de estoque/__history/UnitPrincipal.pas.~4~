{$R *.dfm}

procedure TFormPrincipal.Sistema2Click(Sender: TObject);
begin
 IF Application.MessageBox('Deseja Realmente sair do sistema?','Sair', MB_ICONQUESTION+MB_YESNO) = mrYes then
 BEGIN
  Application.Terminate
 END;

end;

end.
